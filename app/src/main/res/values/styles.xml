<resources>

    <style name="AppTheme" parent="Base.AppTheme" />
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="actionBarStyle">@style/AppTheme.PopupOverlay</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.Toolbar">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/Toolbar.Title</item>
        <item name="height">?attr/actionBarSize</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorOnBackgroundText</item>
    </style>

    <style name="AppTheme.ColoredActionBar" parent="Base.AppTheme.ColoredActionBar" />
    <style name="Base.AppTheme.ColoredActionBar">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorBlack54</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
